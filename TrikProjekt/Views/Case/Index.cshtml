@model IEnumerable<TrikProjekt56.Models.Case>
@{
    ViewData["Title"] = "Index";
    SortModel sortModel = (SortModel)ViewData["sortModel"];
    SiteModel site = ViewBag.Site;
}
<div class="container mainSystemCollection mt-3 mb-2">
    <div class = "row">
        <div class="col-sm">
            <a class="btn ml-1" asp-area="" asp-controller="Case" asp-action="Index" style="font-size: 20px;">Case</a>
        </div>
        <div class="col-sm justify-content-end">
                <a asp-action="Create" class="btn" style="float: right; font-size: 20px;" >Create new</a>
        </div>
    </div>
</div>
<div class="container mainSystemCollection">
    <div class="row">
            <partial name="TopBar" model="@site" />
    </div>
    <div class = "row">
        <div class = "container m-0 p-0">
            <table class="table mainTableCollection shadowtable">
                <thead>
                    <tr>
                        <th>
                            <i class="@sortModel.GetColumn("Code").SortIcon" arial-hidden="true"></i>
                            <a class="text-primary" asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("Code").SortExpression">
                                @Html.DisplayNameFor(model => model.Code)
                            </a>
                        </th>
                        <th>
                            <i class="@sortModel.GetColumn("name").SortIcon" arial-hidden="true"></i>
                            <a class="text-primary" asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("name").SortExpression">
                                @Html.DisplayNameFor(model => model.Name)
                            </a>
                        </th>
                        <th>
                            <i class="@sortModel.GetColumn("StartDate").SortIcon" arial-hidden="true"></i>
                            <a class="text-primary" asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("StartDate").SortExpression">
                                @Html.DisplayNameFor(model => model.StartDate)
                            </a>
                        </th>
                        <th>
                            <i class="@sortModel.GetColumn("isClosed").SortIcon" arial-hidden="true"></i>
                            <a class="text-primary" asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("isClosed").SortExpression">
                                @Html.DisplayNameFor(model => model.isClosed)
                            </a>
                        </th>
                        <th>
                            <i class="@sortModel.GetColumn("CategoryId").SortIcon" arial-hidden="true"></i>
                            <a class="text-primary" asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("CategoryId").SortExpression">
                                @Html.DisplayNameFor(model => model.CategoryId)
                            </a>
                        </th>
                        <th class="text-primary" >
                            Options
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Code)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StartDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.isClosed)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Categories.Name)
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@item.Code">
                                            <span class="btn btn-outline-secondary myButton">
                                                <i class="fa fa-edit" aria-hidden="true"></i>
                                            </span>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Code">
                                            <span class="btn btn-outline-secondary myButton">
                                                <i class="fa fa-eye" aria-hidden="true"></i>
                                            </span>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Code">
                                            <span class="btn btn-outline-secondary myButton">
                                                <i class="fa fa-trash" aria-hidden="true"></i>
                                            </span>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="row" style="margin-bottom: 100px;">
            <partial name="BottomBar" model="@site" />
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationPartial");}
}