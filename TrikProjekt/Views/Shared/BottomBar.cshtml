@model SiteModel

<div class = "container m-0 p-0 btn-group" style="background-color:darkgrey; border-radius:0px 0px 15px 15px; color:white; height: 45px;">
    <div class="col-4 btn-group p-1 m-1">
        <p class="bottomtext">
            Showing @Model.StartRecord to @Model.EndRecord of @Model.Items Rows
        </p>
    </div>
    <div class="col-4 btn-group p-1 m-1 justify-content-center">
        <p class="bottomtext">
            Rows/Page
        </p>
        <p class="p-1 ml-1">
                <select class="form-control" id="pageSelector" style="margin-top:-5px !important; width:2rem;" asp-items="Model.GetPageSizes()"
                    onchange = "ChangePageSize(this)";>
                </select>
        </p>
    </div>
    <div class="col-4 btn-group p-1 m-1 justify-content-center">
        <p class="bottomtext">
            Showing @Model.CurrentPage / @Model.TotalPages Pages
        </p>
    </div>
</div>

<script>
    function ChangePageSize(obj)
    {
        var controllerName = '@this.ViewContext.RouteData.Values["controller"].ToString()';
        window.location.href = "/" + controllerName + '/@Model.Action' + "?pageSize=" + obj.value + "&SearchText@Model.SearchText" + "&sortExpression=" + "@Model.SortExpression";
    }
</script>